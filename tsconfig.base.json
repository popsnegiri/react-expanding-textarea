{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "paths": {
      "*": ["./source/types/*"]
    },
    "sourceMap": false,
    "strict": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules/",
    "./source/types/fast-shallow-equal.d.ts"
  ]
}
